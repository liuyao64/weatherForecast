
page {
	background-color: #7dbbfa;
}
.top {
	margin: 30rpx 0;
	padding: 0 30rpx;
	color: #FFFFFF;
}
.top-search {
	width: 600rpx;
	height: 64rpx;
	line-height: 64rpx;
	border-radius: 8rpx;
	background-color: rgba(0, 0, 0, 0.3);
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.icon-search {
	width: 30rpx;
	height: 30rpx;
}
input {
	width: 530rpx;
	height: 64rpx;
	line-height: 64rpx;
}
.title {
	color: #fff;
	font-size: 30rpx;
	margin: 30rpx 30rpx 0rpx 30rpx;
}
.wrap {
	overflow: hidden;
	white-space: normal;
	width: 690rpx;
	margin: 0 30rpx;
}
.hot-city {
	display: inline-block;
	color: #fff;
	height: 60rpx;
	line-height: 60rpx;
	padding: 0 10rpx;
	margin-right: 20rpx;
	margin-top: 20rpx;
	background-color: rgba(0, 0, 0, 0.2);
}

