var weatherIcon = function(code) {
	var src = ''
	switch (code) {
		case '晴':
			src = '../../static/images/weatherIcon/sunny.png';
			break;
		case '多云':
			src = '../../static/images/weatherIcon/more-cloud.png';
			break;
		case '阴':
			src = '../../static/images/weatherIcon/overcast.png';
			break;
		case '小雨':
			src = '../../static/images/weatherIcon/light-rain.png';
			break;
		case '中雨':
			src = '../../static/images/weatherIcon/moderate-rain.png';
			break;
		case '大雨':
			src = '../../static/images/weatherIcon/heavy-rain.png';
			break;
		case '小雪':
			src = '../../static/images/weatherIcon/light-snow.png';
			break;
		case '中雪':
			src = '../../static/images/weatherIcon/moderate-snow.png';
			break;
		case '大雪':
			src = '../../static/images/weatherIcon/heavy-snow.png';
			break;
		case '雨夹雪':
			src = '../../static/images/weatherIcon/rain-snow.png';
			break;
		case '雷阵雨':
			src = '../../static/images/weatherIcon/thunder-shower.png';
			break;
		case '阵雨':
			src = '../../static/images/weatherIcon/shower.png';
			break;
		case '雾':
			src = '../../static/images/weatherIcon/fog.png';
			break;
	}
	return src;
}

